{
  "extends": [
    // "tslint:recommended",
    "tslint-react",
    "tslint-config-standard",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "no-console": false,
    "no-empty": true,
    "max-line-length": {
        "options": [100]
    },
    "triple-equals": true,
    "quotemark": [true, "single"]
  }
}
